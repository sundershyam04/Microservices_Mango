@model LoginRequestDto
@{
    ViewBag.Title = "Login Page";
}

<title>@ViewBag.Title</title>

<form method="post">
    <div class="container border p-4">
        <div class="row text-center">
            <h1>Login</h1>
        </div>
        <div class="row">
            <div class="col-6 offset-3 pb-2">
                <label asp-for="UserName" class="form-label">Username</label>
                <input asp-for="UserName" class="form-control" placeholder="Enter your Username" />
                <span asp-validation-for="UserName" class="text-danger" />
            </div>
            <div class="col-6 offset-3 pb-2">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" class="form-control" placeholder="Enter your Password" />
                <span asp-validation-for="Password" class="text-danger" />
            </div>
            <div class="col-6 offset-3 pb-2">
                <input type="submit" class="form-control btn-success" value="Login" />
            </div>
        </div>
    </div>
 </form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}