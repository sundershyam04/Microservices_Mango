@model RegistrationRequestDto

<form action="/Auth/Register" method="post">
    <div class="container border p-4">
        <div class="row text-center">
            <h1>Register</h1>
        </div>
        <div class="row">
            <div class="col-6 offset-3 pb-2">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" placeholder="Enter your Email" />
                <span asp-validation-for="Email" class="text-danger" />
            </div>
            <div class="col-6 offset-3 pb-2">
                <label asp-for="Name" class="form-label">Name</label>
                <input asp-for="Name" class="form-control" placeholder="Enter your Name" />
                <span asp-validation-for="Name" class="text-danger" />
            </div>
            <div class="col-6 offset-3 pb-2">
                <label asp-for="PhoneNumber" class="form-label">Contact No.</label>
                <input asp-for="PhoneNumber" class="form-control" placeholder="Enter your Contact no." />
                <span asp-validation-for="PhoneNumber" class="text-danger" />
            </div>
            <div class="col-6 offset-3 pb-2">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" class="form-control" placeholder="Enter your Password" />
                <span asp-validation-for="Password" class="text-danger" />
            </div>
            <div class="col-6 offset-3 pb-2">
                <label asp-for="Role" class="form-label">Role</label>
                <select asp-for="Role" class="form-select" asp-items="@ViewBag.RoleList">
                    <option disabled selected>--Select your role--</option>
                </select>
                <span asp-validation-for="Role" class="text-danger" />
            </div>
            <div class="col-6 offset-3 pb-2">
                <input type="submit" class="form-control btn-success" value="Register User" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
