@{
    var status = Context.Request.Query["status"];
    var approved = "";
    var readyforpickup = "";
    var cancelled = "";
    var completed = "";
    var all = "";
    switch (status)
    {
        case "approved":
            approved = "active text-white bg-secondary";
            break;
        case "readyforpickup":
            readyforpickup = "active text-white bg-secondary";
            break;
        case "cancelled":
            cancelled = "active text-white bg-secondary";
            break;
        case "completed":
            completed = "active text-white bg-secondary";
            break;
        default:
            all = "active text-white bg-secondary";
            break;
    }

}
<div class="card shadow border-0 mt-4>">
  <div class="card-header bg-secondary bg-gradient m-lg-0 py-3 d-flex justify-content-between">
        <div class="row">
            <h1 class="text-white">OrderList</h1>
        </div>
        <ul class="list-group list-group-horizontal-sm pt-2">
            <li class="list-group-item @approved" >
                <a style="text-decoration:none" asp-controller="Order" asp-action="OrderIndex" asp-route-status="approved">Approved</a>
            </li>
            <li class="list-group-item @readyforpickup">
                <a style="text-decoration:none" asp-controller="Order" asp-action="OrderIndex" asp-route-status="readyforpickup">Ready for Pickup</a>
            </li>
            <li class="list-group-item @completed">
                <a style="text-decoration:none" asp-controller="Order" asp-action="OrderIndex" asp-route-status="completed">Completed</a>
            </li>
            <li class="list-group-item @cancelled">
                <a style="text-decoration:none" asp-controller="Order" asp-action="OrderIndex" asp-route-status="cancelled">Cancelled</a>
            </li>
            <li class="list-group-item @all">
                <a style="text-decoration:none" asp-controller="Order" asp-action="OrderIndex" asp-route-status="all">All</a>
            </li>
        </ul>
  </div>
   <div class="card-body p-4">
     <table id="tblData" class="table table-bordered table-striped pt-3" style="width:100%">
         <thead>
             <tr>   
                 <th>ID</th>
                 <th>Email</th>
                 <th>Name</th>
                 <th>Phone</th>
                 <th>Status</th>
                 <th>Total</th>
                 <th>Details</th>
             </tr>
         </thead>
     </table>
   </div> 
 </div>

 @section Scripts{
     <script src="~/js/order.js"></script>
 }